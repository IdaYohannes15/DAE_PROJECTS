import random

# List of words to choose from
words = ["python", "basketball", "celebration", "volunteers", "technology", "understand", "hangman", "school", "project", "amazing", "jungle", "planet", "computer", "ratio", "beach", "platform", "cube", "projectile", "time"]
def choose_word ():
    # Pick a random word between 4 and 10 letters
    valid_words = [word for word in words if 4 <= len(word) <=10]
    return random.choice(valid_words)
def play_game():
    word = choose_word()
    guessed = ["_"] * len(word) # Hidden version of word
    attempts_left = 10
    guessed_letters = [ ]

    print("\nWelcome to the WordGuesser!")
    print("I have chosen a word with", len(word), "letters.")
    print("You have 10 tries to guess letters or the full word!")

    while attempts_left > 0:
        print("\nWord:", " ".join(guessed))
        print("Tries left:", attempts_left)
        print("Guessed letters:", ", ".join(guessed_letters))

        guess = input("Enter a letter or guess the full word: ").lower()
        if len(guess) == 1:
            if guess in guessed_letters:
                print("You already guessed that letter.")
            elif guess in word:
                print("Good guess!")
                guessed_letters.append(guess)
                for i in range(len(word)):
                    if word[i] == guess:
                        guessed[i] = guess
                if "_" not in guessed:
                    print("\nüéâ You guessed the word:", word)
                    return
            else:
                print("Wrong letter.")
                guessed_letters.append(guess)
                attempts_left -= 1
        elif len(guess) == len(word):
            if guess == word:
                print("\nüéâ You guessed the word correctly:", word)
                return
            else:
                print("Wrong guess.")
                attempts_left -= 1
        else:
            print("Invalid input.")

    print("\n‚ùå You're out of tries! The word was:", word)

def main():
    play_again = "yes"
    while play_again.lower() == "yes":
        play_game()
        play_again = input("\nDo you want to play again? (yes/no): ")
    print("Thanks for playing!")

main()